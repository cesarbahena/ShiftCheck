<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShiftCheck.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShiftCheck.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Samples"
        ContentTemplate="{DataTemplate local:PendingSamplesPage}"
        Route="PendingSamplesPage" />

    <ShellContent
        Title="Handover"
        ContentTemplate="{DataTemplate local:CreateHandoverPage}"
        Route="CreateHandoverPage" />

</Shell>
